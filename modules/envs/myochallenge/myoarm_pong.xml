<!-- 
    <include file="../../../../simhive/myo_sim/torso/assets/myotorso_assets.xml"/>
    <include file="../../../../simhive/myo_sim/head/assets/myohead_simple_assets.xml"/>
    <include file="../../../../simhive/myo_sim/leg/assets/myolegs_assets.xml"/>
