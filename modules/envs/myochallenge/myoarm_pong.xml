    <include file="../../../../simhive/myo_sim/scene/myosuite_quad.xml"/>
    <compiler angle="radian" meshdir='../../../../simhive/myo_sim' texturedir='../../../../simhive/myo_sim/'/>
    
    <visual>
        <global offwidth="1280" offheight="1080"/>
    </visual>
    
    <asset>
        <!-- Ping Pong mesh and texture -->
        <mesh name="tabletennis_table" file="../../envs/myo/assets/tabletennis_table.obj" />
        <mesh name="tabletennis_net_mesh" file="../../envs/myo/assets/tabletennis_net.obj" />
        <texture name="tabletennis_tex" type="2d" file="../../envs/myo/assets/tabletennis.png"/>

        <material name="tabletennis_mat" texture="tabletennis_tex" specular="0.2" shininess="0.4"/>

        <!-- Ping Pong Paddle mesh and texture -->
        <mesh name="paddle_mesh" file="../../envs/myo/assets/paddle.obj" />
        <texture name="paddle_tex" type="2d" file="../../envs/myo/assets/paddle_1k.png"/>
        <material name="paddle_mat" texture="paddle_tex" specular="0.2" shininess="0.4"/>

        <!-- Floor material -->
        <material name="floor_mat" rgba="0.3 0 0 1"/>
    </asset>

    <default class="main">
        <default class="visual">
            <geom group="2" type="mesh" contype="0" conaffinity="0"/>
        </default>
        <default class="collision">
            <geom group="4" condim="3" contype="1" conaffinity="1" solref="0.002 1" solimp="0.95 0.95 0.01" mass="0"/>
        </default>

        <default class="paddle_move">
            <joint limited="true" damping="50" armature="0.1"/>
            <position kp="5000" ctrllimited="true" ctrlrange="-1.5 1.5"/>
        </default>
    </default>

    <compiler autolimits="true" inertiafromgeom="auto" angle="radian" balanceinertia="true" boundmass="0.001" boundinertia=".0001"/>
    <option timestep="0.002">
        <flag multiccd="enable"/>
    </option>

    <worldbody>
        <camera name="default" pos="-0.367 0.451 1.483" xyaxes="-0.033 -0.999 0.000 0.207 -0.007 0.978"/>
        <camera name="close_up" pos="-0.031 -6.315 0.984" xyaxes="1.000 -0.009 -0.000 -0.001 -0.099 0.995"/>
        <camera name="opponent_view" pos="-2.5 0.0 2.0" xyaxes="0 -1 0 0.5 0 0.866"/>

        <!-- <body name="full_body" pos="1.6 0 0.95" euler="0 0 3.14">
            <include file="../../../../simhive/myo_sim/torso/assets/myotorso_arm_chain.xml"/>
            <joint name="pelvis_x" class="pelvis_move"  axis="1 0 0"  range="-1 -0.05"/>
            <joint name="pelvis_y" class="pelvis_move"  axis="0 1 0" range="-1 1"/>
            <include file="../../../../simhive/myo_sim/leg/assets/myolegs_chain.xml"/>
        </body> -->

        <light name="glow" pos="0 0 1.5" directional="false"  castshadow="true" diffuse="0.7 0.7 0.7" specular="0.5 0.5 0.5" ambient="0.52 0.52 0.52"/>

        <!-- Ping Pong geom -->
        <body name="tabletennis_table">
            <geom name="coll_own_half" type="box" size="0.685 0.76 0.795" pos="0.685 0.04 0" rgba="0 0 0 0" class="collision"/>
            <geom name="coll_opponent_half" type="box" size="0.685 0.76 0.796" pos="-0.685 0.04 0" rgba="0 0 0 0" class="collision"/>
            <geom name="coll_net" type="box" size="0.005 0.9125 0.1525" pos="0 0.04 0.795" rgba="0 0 0 0" class="collision"/>
            <geom name="mesh_tabletennis_table" type="mesh" mesh="tabletennis_table"
                material="tabletennis_mat" rgba="1 1 1 1"
                pos="0 0 0" euler="1.57 0 0" contype="0" conaffinity="0"/>

            <geom name="mesh_tabletennis_net" type="mesh" mesh="tabletennis_net_mesh"
                material="tabletennis_mat" rgba="1 1 1 1"
                pos="0 0 0" euler="1.57 0 0" contype="0" conaffinity="0"/>
        </body>

        <body name="paddle" pos="1.8 0.5 1.13">
            <inertial pos="0 0 0" mass="0.15" diaginertia="0.001 0.001 0.001"/>
            <joint name="paddle_x" type="slide" axis="1 0 0" range="-2 2" class="paddle_move"/>
            <joint name="paddle_y" type="slide" axis="0 1 0" range="-2 2" class="paddle_move"/>
            <joint name="paddle_z" type="slide" axis="0 0 1" range="-2 2" class="paddle_move"/>
            <joint name="paddle_rx" type="hinge" axis="1 0 0" range="-3.14 3.14" class="paddle_move"/>
            <joint name="paddle_ry" type="hinge" axis="0 1 0" range="-3.14 3.14" class="paddle_move"/>
            <joint name="paddle_rz" type="hinge" axis="0 0 1" range="-3.14 3.14" class="paddle_move"/>
            
            <body name="paddle_visual" euler="-0.3 1.57 0">
                <geom name="paddle" type="mesh" mesh="paddle_mesh"
                    material="paddle_mat" rgba="1 1 1 1"
                    pos="0 0 0" euler="0 0 0"/>
                <site name="paddle" pos="-0.06 0. 0" group="4"/>
                <geom name="pad" type="cylinder" size="0.093 0.020" pos="-0.07 0 0" class="collision"/>
                <geom name="handle" type="cylinder" euler="0 1.57 0" size="0.016 0.051" pos="0.04 0 0" class="collision"/>
            </body>
        </body>

        <body name="pingpong" pos="0.95 0.0 1.252">
            <inertial pos="0 0 0" mass="2.7e-3" diaginertia="0.00000072 0.00000072 0.00000072"/>
            <freejoint name="pingpong_freejoint"/>
            <site name="pingpong" pos="0 0 0" group="3"/>
            <geom name="pingpong" type="sphere" size=".02" shellinertia="true" fluidcoef="0.235 0.25 0.0 1.0 1.0" group="1" rgba="0.98 0.70 0.015 1" priority="2" solimp="0.9 0.95 0.001 0.5 2" solref="-80000 -1" fluidshape="ellipsoid" class="collision"/>
        </body>

    </worldbody>

    <actuator>
        <position name="paddle_x" joint="paddle_x" class="paddle_move" ctrllimited="true" ctrlrange="-0.3 0"/>
        <position name="paddle_y" joint="paddle_y" class="paddle_move" ctrllimited="true" ctrlrange="-1.5 0.5"/>
        <position name="paddle_z" joint="paddle_z" class="paddle_move" ctrllimited="true" ctrlrange="-0.3 0.3"/>
        <position name="paddle_rx" joint="paddle_rx" class="paddle_move" ctrlrange="-1.7 1.7"/>
        <position name="paddle_ry" joint="paddle_ry" class="paddle_move" ctrlrange="-1.2 1.2"/>
        <position name="paddle_rz" joint="paddle_rz" class="paddle_move" ctrlrange="-1.2 1.2"/>
    </actuator>

    <sensor>
        <velocimeter name="pingpong_vel_sensor" site="pingpong"/>
        <velocimeter name="paddle_vel_sensor" site="paddle"/>
    </sensor>

    <keyframe>
        <key name="default"
             qpos='0.11 0.15 0.05 0 0 0 -1.25 -0.5 1.2 1 0 0 0'/>
        <key name="dribble" qpos='-0.6 -0.2 -0.1 0 0 0 1.05 0.3 1.282 1 0 0 0'/>
    </keyframe>

    </mujoco>
